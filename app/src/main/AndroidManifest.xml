<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="han.project.toeic" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ListVocabActivity"
            android:label="@string/title_activity_list_vocab"
            android:parentActivityName=".MainActivity"
            android:theme="@style/MyMaterialTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="han.project.toeic.MainActivity" />
        </activity>
        <activity
            android:name=".VideoListDemoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/playerview_text" >
        </activity>
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PDFViewActivity" >
        </activity>
    </application>

</manifest>
